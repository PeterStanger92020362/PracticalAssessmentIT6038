doctype html
html(lang='en')
  
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MusicHub
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')


  


  body

    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarToggler' aria-controls='navbarToggler' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        a.navbar-brand(href='/') MusicHub
        #navbarToggler.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item.login
              a.nav-link(href='/login')
                | Login to Spotify 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/' onClick='logout()')
                | Logout from Spotify
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/' onClick='logout()') Link
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    .container
      form(action='')
        input#hidden_token(type='hidden')
        .col-sm-6.form-group.row.mt-4.px-0
          label.form-label.col-sm-2(for='Genre') Genre:
          select#select_genre.form-control.form-control-sm.col-sm-10(name='')
            option Select...
        .col-sm-6.form-group.row.px-0
          label.form-label.col-sm-2(for='Genre') Playlists:
          select#select_playlist.form-control.form-control-sm.col-sm-10(name='')
            option Select...
        .col-sm-6.row.form-group.px-0
          button#btn_submit.btn.btn-success.col-sm-12(type='submit') Search
      .row
        .col-sm-6.px-0
          .list-group.song-list
        #song-detail.offset-md-1.col-sm-4
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
    script(src='/javascripts/spotify.js')
    